<div class="navbar-wagon sticky-top">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <i class="fas fa-car-alt"></i>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

  <!-- Search form -->
    <%= form_tag root_path, class: "navbar-wagon-search rounded", method: :get do %>
      <%= text_field_tag :query,
      params[:query],
      class: "navbar-wagon-search-input",
      placeholder: "Find a car" %>
      <%= button_tag( :class => "btn navbar-wagon-search-btn") do%>
        <i class="fa fa-search"> </i>
      <% end %>
    <% end %>

    <!-- Notification -->



    <!-- Button (call-to-action) -->
    <% if user_signed_in? %>
      <%= link_to "Sign out", destroy_user_session_path, method: :delete, data: { confirm: "Are you sure you want to sign out?"} , class: "btn-sign-in rounded" %>
      <!-- Dropdown list -->
      <div class="dropdown">
        <%= cl_image_tag current_user.photo.key, class: "dropdown-toggle avatar", data: { toggle: 'dropdown' } %>
        <!-- <i class="dropdown-toggle" data-toggle="dropdown"></i> -->
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu rounded">
          <li><%= link_to "List new car", new_car_path %></li>
          <li><%= link_to "View cars", cars_path %></li>
          <li><%= link_to 'Profile', user_path(current_user) %></li>
          <li><%= link_to 'Sign out', destroy_user_session_path, method: :delete, data: { confirm: "Are you sure you want to sign out?"} %></li>
        </ul>
      </div>

    <% else %>
      <%= link_to "Sign In", user_session_path, class: "btn-sign-in rounded" %>
      <div class="dropdown">
        <i class="dropdown-toggle" data-toggle="dropdown"></i>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu rounded">
          <li><%= link_to "List new car", new_car_path %></li>
          <li><%= link_to "View cars", cars_path %></li>
          <li><%= link_to 'Profile', user_session_path %></li>
        </ul>
      </div>
    <% end %>

  </div>
</div>
