<div class="row">
<div class="col-md-3 text-center">
  <% if @user.photo.attached? %>
        <% card_image = @user.photo.key %>
      <% else %>
        <% card_image = "" %>
      <% end %>
 <div class="user-photo"><%= cl_image_tag card_image, class: 'img-circle'%></div>
</div>
<div class="col-md-6">
  <h1><%= @user.first_name %> <%= @user.last_name %></h1>
  <div class="well profile-block contact-info">
    <h3>Contact:</h3>
    <%= @user.email %><br/>
  </div>
</div>
</div>
