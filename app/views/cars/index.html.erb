<div class="container my-5 p-5">
  <h1 class="text-center">All cars</h1>
  <h4 class="text-center">Find your favourite car to rent</h4>
  <div class="row justify-content-center">
    <% @cars.each do |car| %>
    <div class="col-4 my-3">
      <div class="card rounded" style="width: 18rem;">
        <% if car.photos.attached? %>
          <div class="card-bg rounded" style="background-image: url(<%= cl_image_path car.photos.first.key%>)"></div>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"> <%= car.make %> <%= car.model %> </h5>
          <p class="card-text"> <%= car.location %> </p>
          <div>
          <%= link_to 'See more', car_path(car), class: "btn btn-primary" %>
        </div>
        </div>
        </div>
      </div>
    <% end %>
    </div>
  </div>
