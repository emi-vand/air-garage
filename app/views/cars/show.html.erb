<div class="container">
<div class="row p-4">
<div class="col-lg-6">

<h1><%= @car.make + " " + @car.model %></h1>

<p>Colour: <%= @car.color %></p>
<p>Seats: <%= @car.seats %></p>
<p>Price per day: £<%= @car.price.round %></p>
<p>Location: <%= @car.location %></p>
<p>Owner: <%= @car.user.first_name %> <%= @car.user.last_name %></p>

<div class="col-md-9 p-3 car-photos">
  <% if @car.photos.attached? %>
    <% @car.photos.each do |photo| %>
      <%= cl_image_tag photo.key, height: 250, crop: :fill, class: "pr-3 car-image" %>
    <% end %>
  <% end %>
</div>

<div class="editbuttons ml-4">
  <%= link_to "Back to cars list", cars_path, class: "btn btn-primary" %>
<% if @car.user == current_user %>
  <%= link_to "Edit your car", edit_car_path, class: "btn btn-primary" %>
  <%= link_to 'Delete', car_path(@car), method: :delete, data: { confirm: "Are you sure you want to delete your car?"}, class: "btn btn-primary" %>
<% end %>
</div>
</div>



<% if @car.user != current_user %>
<div class="col-lg-6">
<div class="rental-form" id="rental_form">
  <%= simple_form_for [@car, @rental] do |f| %>
    <%= f.input :pick_up, as: :date, html5: true, id:"rental_pick_up" %>
    <%= f.input :drop_off, as: :date, html5: true, id:"rental_drop_off" %>
    <p id="rental_price"> Total Price: £ <%= @rental.calculated_price %></p>
    <%= f.button :submit, class: "btn btn-primary mb-4" %>
  <% end %>
</div>

</div>
<% end %>
</div>

</div>
